{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:cronjob": "nest start cronjob --watch",
    "start:debug": "nest start --debug --watch",
    "deploy:stg": "cross-env NODE_ENV=staging ./scripts/pm2_start.sh backend",
    "deploy:stg:cronjob": "cross-env NODE_ENV=staging ./scripts/pm2_start.sh cronjob",
    "deploy:prod": "cross-env NODE_ENV=production ./scripts/pm2_start.sh backend",
    "deploy:prod:cronjob": "cross-env NODE_ENV=production ./scripts/pm2_start.sh cronjob",
    "reload:stg": "cross-env NODE_ENV=staging ./scripts/pm2_reload.sh backend",
    "reload:stg:cronjob": "cross-env NODE_ENV=staging ./scripts/pm2_reload.sh cronjob",
    "reload:prod": "cross-env NODE_ENV=production ./scripts/pm2_reload.sh backend",
    "reload:prod:cronjob": "cross-env NODE_ENV=production ./scripts/pm2_reload.sh cronjob",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "cd .. && husky install backend/.husky",
    "knex": "knex --knexfile knexfile.ts",
    "knex:js": "knex --knexfile knexfile.js",
    "migrate": "node ./scripts/createDatabase.js; yarn knex migrate:latest",
    "migrate:js": "node ./scripts/createDatabase.js; yarn knex:js migrate:latest",
    "migrate:make": "yarn knex migrate:make -x ts",
    "seed": "yarn knex seed:run",
    "seed:stg": "cross-env NODE_ENV=staging yarn knex:js seed:run",
    "seed:prod": "cross-env NODE_ENV=production yarn knex:js seed:run",
    "seed:make": "yarn knex seed:make -x ts",
    "drop-db": "node ./scripts/dropDatabase.js",
    "drop-db:stg": "cross-env NODE_ENV=staging node ./scripts/dropDatabase.js",
    "drop-db:prod": "cross-env NODE_ENV=production node ./scripts/dropDatabase.js"
  },
  "dependencies": {
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.1.0",
    "aws-sdk": "^2.1233.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.2",
    "knex": "^2.3.0",
    "objection": "^3.0.1",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-telegram-official": "^2.0.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/cron": "^2.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
